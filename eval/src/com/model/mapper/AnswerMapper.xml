<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.model.dao.AnswerDao" >

	<!-- 查询评论中的所有结果 -->
	<select id="getListAnswer" resultType="com.model.entity.Answer">
		select * from answer
	</select>
	
	<!-- 向数据库中插入评论结果,插入没有返回类型 -->
	<insert id="insertAnswer" parameterType="com.model.entity.Answer"  >
		insert answer (acontent,ascore,sid,tid) values (#{acontent},#{ascore},#{sid},#{tid})
	</insert>
	
	<!-- 删除数据库中的评论结果 -->
	<delete id="deleteAnswer" parameterType="int">
		delete * from answer where aid=#{aid}
	
	</delete>
	
	
</mapper>